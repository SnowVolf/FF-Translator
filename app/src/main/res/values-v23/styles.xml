<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_colorPrimary</item>
        <item name="colorPrimaryDark">@color/light_colorPrimaryDark_23</item>
        <item name="colorAccent">@color/light_colorAccent</item>
        <item name="colorToolbarIcon">@color/light_toolbarIcon</item>
        <item name="toolbarTheme">@style/AppTheme.AppBarOverlayLight</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlayLight</item>
        <item name="android:windowBackground">@color/light_windowBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="cardStyle">@style/CardStyle.Light</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_colorPrimaryDark</item>
        <item name="colorAccent">@color/dark_colorAccent</item>
        <item name="colorToolbarIcon">@color/dark_toolbarIcon</item>
        <item name="toolbarTheme">@style/AppTheme.AppBarOverlayDark</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlayDark</item>
        <item name="android:windowBackground">@color/dark_windowBackground</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="cardStyle">@style/CardStyle.Dark</item>
    </style>

    <style name="AppTheme.Black" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black_colorPrimary</item>
        <item name="colorPrimaryDark">@color/black_colorPrimaryDark</item>
        <item name="colorAccent">@color/black_colorAccent</item>
        <item name="colorToolbarIcon">@color/black_toolbarIcon</item>
        <item name="android:windowBackground">@color/black_windowBackground</item>
        <item name="toolbarTheme">@style/AppTheme.AppBarOverlayDark</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlayDark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="cardStyle">@style/CardStyle.Black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>