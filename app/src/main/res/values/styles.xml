<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_colorPrimary</item>
        <item name="colorPrimaryDark">@color/light_colorPrimaryDark</item>
        <item name="colorAccent">@color/light_colorAccent</item>
        <item name="colorToolbarIcon">@color/light_toolbarIcon</item>
        <item name="toolbarTheme">@style/AppTheme.AppBarOverlayLight</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlayLight</item>
        <item name="android:windowBackground">@color/light_windowBackground</item>
        <item name="cardStyle">@style/CardStyle.Light</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_colorPrimaryDark</item>
        <item name="colorAccent">@color/dark_colorAccent</item>
        <item name="colorToolbarIcon">@color/dark_toolbarIcon</item>
        <item name="toolbarTheme">@style/AppTheme.AppBarOverlayDark</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlayDark</item>
        <item name="android:windowBackground">@color/dark_windowBackground</item>
        <item name="cardStyle">@style/CardStyle.Dark</item>
    </style>

    <style name="AppTheme.Black" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black_colorPrimary</item>
        <item name="colorPrimaryDark">@color/black_colorPrimaryDark</item>
        <item name="colorAccent">@color/black_colorAccent</item>
        <item name="colorToolbarIcon">@color/black_toolbarIcon</item>
        <item name="android:windowBackground">@color/black_windowBackground</item>
        <item name="toolbarTheme">@style/AppTheme.AppBarOverlayDark</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlayDark</item>
        <item name="cardStyle">@style/CardStyle.Black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CardStyle.Light" parent="CardView.Light">
        <item name="android:layout_marginLeft">-2dp</item>
        <item name="android:layout_marginRight">-2dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardBackgroundColor">@color/light_cardView</item>
    </style>

    <style name="CardStyle.Dark" parent="CardView.Dark">
        <item name="android:layout_marginLeft">-2dp</item>
        <item name="android:layout_marginRight">-2dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardBackgroundColor">@color/dark_cardView</item>
    </style>

    <style name="CardStyle.Black" parent="CardView.Dark">
        <item name="android:layout_marginLeft">-2dp</item>
        <item name="android:layout_marginRight">-2dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardBackgroundColor">@color/black_cardView</item>
    </style>

    <style name="UpdateButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/btn_colored</item>
        <item name="android:textColor">@color/update_icon</item>
    </style>

    <style name="AppTheme.AppBarOverlayLight" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlayLight" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlayDark" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlayDark" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CrashDialog" parent="Theme.AppCompat.Dialog.MinWidth">
        <item name="android:background">@color/dark_windowBackground</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


    <style name="AccentRed"><item name="colorAccent">@color/accent_red</item></style>
    <style name="AccentPink"><item name="colorAccent">@color/accent_pink</item></style>
    <style name="AccentPurple"><item name="colorAccent">@color/accent_purple</item></style>
    <style name="AccentIndigo"><item name="colorAccent">@color/accent_indigo</item></style>
    <style name="AccentBlue"><item name="colorAccent">@color/light_colorAccent</item></style>
    <style name="AccentLBlue"><item name="colorAccent">@color/md_light_blue_500</item></style>
    <style name="AccentCyan"><item name="colorAccent">@color/accent_cyan</item></style>
    <style name="AccentTeal"><item name="colorAccent">@color/accent_teal</item></style>
    <style name="AccentGreen"><item name="colorAccent">@color/accent_green</item></style>
    <style name="AccentLGreen"><item name="colorAccent">@color/md_light_green_500</item></style>
    <style name="AccentLime"><item name="colorAccent">@color/md_lime_500</item></style>
    <style name="AccentYellow"><item name="colorAccent">@color/accent_yellow</item></style>
    <style name="AccentAmber"><item name="colorAccent">@color/accent_amber</item></style>
    <style name="AccentOrange"><item name="colorAccent">@color/accent_orange</item></style>
    <style name="AccentDOrange"><item name="colorAccent">@color/md_deep_orange_500</item></style>
    <style name="AccentBrown"><item name="colorAccent">@color/accent_brown</item></style>
    <style name="AccentGrey"><item name="colorAccent">@color/accent_grey</item></style>
    <style name="AccentBGrey"><item name="colorAccent">@color/md_blue_grey_500</item></style>
</resources>