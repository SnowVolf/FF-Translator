<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/row_history_layout"
    android:foreground="?selectableItemBackground"
    android:gravity="center_vertical"
    android:minHeight="64dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp">
    <RelativeLayout
        android:id="@+id/row_history_clickable_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/row_history_summary">
    <TextView
        android:id="@+id/row_history_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/row_history_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="marquee"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/row_history_title"
        android:text="source"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <TextView
        android:id="@+id/row_history_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:layout_alignBottom="@+id/row_history_clickable_container"
        android:layout_alignParentEnd="true"
        android:textSize="12sp"
        android:ellipsize="marquee"
        android:paddingTop="4dp"/>
    <ImageView
        android:visibility="visible"
        android:id="@+id/row_history_menu"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/ic_menu"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_above="@+id/row_history_summary"
        android:layout_alignParentEnd="true" />
</RelativeLayout>