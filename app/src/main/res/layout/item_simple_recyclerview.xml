<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:id="@+id/row_simple_layout"
    android:foreground="?selectableItemBackground"
    android:gravity="center_vertical"
    android:minHeight="?attr/actionBarSize"
    android:paddingStart="4dp"
    android:paddingEnd="4dp">

    <ImageView
        android:visibility="visible"
        android:id="@+id/row_simple_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_action_clear"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"/>
    <RelativeLayout
        android:id="@+id/row_simple_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/row_simple_icon">
    <TextView
        android:id="@+id/row_simple_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="16sp"
        android:text="SimpleRecyclerView Item"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_above="@+id/row_simple_subtitle"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/row_simple_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Subtitle"
        android:textSize="12sp"
        android:maxLines="3"
        android:layout_marginBottom="13dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
    </RelativeLayout>

</RelativeLayout>