<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/circle_mask"
        android:gravity="center"
        android:id="@+id/linearLayout2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp">
        <ImageView
            android:id="@+id/no_net_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_signal_wifi_off" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/response_title"
        android:text="@string/no_net_connection"
        style="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/response_explanation"
        android:text="@string/no_connection_translate_sum"
        android:layout_below="@id/response_title"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp" />
    <Button
        android:id="@+id/button_response_network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_connection_response"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/response_explanation"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/button_retry_network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_retry_network"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_below="@+id/button_response_network"
        android:layout_centerHorizontal="true" />

</RelativeLayout>